<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebViewCinmana.MainPage"
             NavigationPage.HasNavigationBar="True"  BackgroundColor="{x:DynamicResource Primary2}"  >
    

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image Aspect="AspectFill" 
                           Source="logo.png"
                           VerticalOptions="CenterAndExpand" 
                        Margin="40,0,40,20"
                               HorizontalOptions="CenterAndExpand" ></Image>

               
                  <Image IsAnimationPlaying="True"  Aspect="AspectFill"     BackgroundColor="{x:DynamicResource Primary2}"   
                   x:Name="img1" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand"  Margin="0,0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ImageButton_Clicked"/>
                    </Image.GestureRecognizers>
                </Image>
                <Button Clicked="Button_Clicked" 
                        Margin="0,0,0,80"  HorizontalOptions="FillAndExpand" HeightRequest="80" 
                         FontSize="30" 
                        Text="دخول | Enter"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
