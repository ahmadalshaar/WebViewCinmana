<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebViewCinmana.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#7e2e34</Color>
            <Color x:Key="Primary2">#252932</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{x:DynamicResource Primary2}"/>
                <Setter Property="BarTextColor" Value="White"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="TextColor" Value="White"></Setter>
                <Setter Property="FontFamily" Value="FontTR"></Setter>
                <Setter Property="CornerRadius" Value="5"></Setter>
                <Setter Property="BackgroundColor" Value="{x:DynamicResource Primary}"></Setter>

            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>