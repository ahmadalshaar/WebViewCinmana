<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebViewCinmana.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#BF0200</Color>
            <Color x:Key="Primary2">#BF0200</Color>
            <Style TargetType="Button">
                <Setter Property="TextColor" Value="White"></Setter>
                <Setter Property="FontFamily" Value="FontTR"></Setter>
                <Setter Property="CornerRadius" Value="5">
                </Setter>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{x:DynamicResource Primary}" Offset="0.4" />
                            <GradientStop Color="{x:DynamicResource Primary2}" Offset="1.0" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>